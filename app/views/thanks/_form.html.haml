= form_for @thank do |f|
  - if @thank.errors.any?
    #error_explanation
      %h2= "#{pluralize(@thank.errors.count, "error")} prohibited this thank from being saved:"
      %ul
        - @thank.errors.full_messages.each do |message|
          %li= message

  .form-group.mandatory
    = f.label 'Название'
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :public
    = f.check_box :public
  .row
    .form-group.col-lg-2
      = f.label 'Тип разметки текста'
      = f.collection_select :markup_type, Project::SUPPORTED_MARKUPS, :to_s, :to_s, {}, class: 'form-control'
  .form-group{:class => 'mandatory'}
    = f.label 'Краткое описание'
    = f.text_area :short_desc, rows: 5, class: 'form-control'
  .form-group
    = f.label 'Полное описание'
    = f.text_area :full_desc, rows: 15, class: 'form-control'
  .form-group.mandatory
    = f.label 'Изображение, до 3 МБ'
    = f.file_field :photo

  .form-group
    = f.submit 'Сохранить', class: 'btn btn-primary'
