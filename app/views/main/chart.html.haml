%h2 Баланс
= area_chart @graph, height: '700px', curve: false, points: false, min: 0, max: @graph.pluck(1).max + 100, id: :chart_balance

%h2 Поступления и затраты по месяцам
= column_chart @expenses.map do |bars|
  = {name: bars.name, data: bars}

%h2 Количество платящих участников
= column_chart @paid_users

%hr
= link_to 'За 1 месяц', chart_path(start: Time.now - 1.month, end: Time.now, range: '1month'), class: 'btn ' + (params[:range] == '1month' ? 'btn-success':'btn-info ')
= link_to 'За 3 месяца', chart_path(start: Time.now - 3.month, end: Time.now, range: '3months'), class: 'btn ' + (params[:range] == '3months' ? 'btn-success':'btn-info ')
= link_to 'За 6 месяцев', chart_path(start: Time.now - 6.month, end: Time.now, range: '6months'), class: 'btn ' + (params[:range] == '6months' ? 'btn-success':'btn-info ')
= link_to 'За 1 год', chart_path(start: Time.now - 12.month, end: Time.now, range: '1year'), class: 'btn ' + (params[:range] == '1year' ? 'btn-success':'btn-info')
= link_to 'За 3 года', chart_path(start: Time.now - 36.month, end: Time.now, range: '3years'), class: 'btn ' + (params[:range] == '3years' ? 'btn-success':'btn-info')
= link_to 'За 5 лет', chart_path(start: Time.now - 60.month, end: Time.now, range: '5years'), class: 'btn ' + (params[:range] == '5years' ? 'btn-success':'btn-info')
= link_to 'За все время', chart_path(range: 'All'), class: 'btn ' + (params[:range] == 'All' ? 'btn-success':'btn-info')

%h2.mt-3#expenses Список расходов

.row
  .col-lg-12
    = paginate @transactions,
      params: { anchor: 'expenses' },
      theme: 'bootstrap-5',
      pagination_class: "pagination-sm justify-content-end"

.row
  .col-lg-12
    %table.table.small
      %thead
        %th
          Дата
        %th
          Расход
        %th
          За что платили
        %th
          Кому
        %th
          Примечания
      %tbody
        - @transactions.each do |t|
          %tr
            %td
              =t.created_at.to_formatted_s(:short)
            %td
              =t.minus if t.plus.zero?
            %td
              =t.purpose
            %td
              = Setting[t.their_account] || t.contractor
            %td
              - if t.irregular?
                %p
                  = "Нерегулярный"
                = t.note if t.note.present?

.row
  .col-lg-12
    = paginate @transactions,
      params: { anchor: 'expenses' },
      theme: 'bootstrap-5',
      pagination_class: "pagination-sm justify-content-end"
