          =image_tag image_path('/images/18121107_802382353254131_1686034606898319436_o-small.jpg'), class: 'featurette-image img-responsive'
      %hr.featurette-divider
        .row.featurette
          .col-md-5
            =image_tag image_path('/images/19986028_1914939925414624_7965107293853319168_n.jpg'), class: 'featurette-image img-responsive'
          .col-md-7
            %h2.featurette-heading
              = t 'index.what_we_have'
              %span.text-muted
                = t 'index.what_we_have_muted'
            %p.lead
              = t('index.what_we_have_content').html_safe
        %hr.featurette-divider
          .row.featurette
            .col-md-5
              %h2.featurette-heading#contacts
                = t 'index.how_to_find'
                %span.text-muted
                  = t 'index.how_to_find_muted'
              %p.lead
                = t('index.how_to_find_content_text').html_safe
              %p.lead
                = t('index.how_to_find_malinohs_content_text').html_safe
              %p.lead
                = t('index.important_text').html_safe
              %p.lead
                = t('index.chats_text').html_safe
              %p.lead
                ="И не забудьте почитать #{link_to('правила', rules_path)}.".html_safe
